<Window x:Class="WpfZad1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfZad1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Button x:Name="AddCoupon" Canvas.Left="154" Canvas.Top="244" HorizontalAlignment="Left" VerticalAlignment="Top" Width="101" Click="AddCoupon_Click">Add Coupon</Button>
        <Button x:Name="GetCoupon" Content="Get random Coupon" Canvas.Left="93" Canvas.Top="291" HorizontalAlignment="Left" VerticalAlignment="Top" Width="224" Click="GetCoupon_Click"/>
        <TextBox x:Name="InputCoupon" Canvas.Left="119" Canvas.Top="169" Height="48" Width="172" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
        <Label x:Name="ShowResult" Height="434" Width="400" HorizontalAlignment="Left" Canvas.Left="400" VerticalAlignment="Center" Background="LightCyan"/>
    </Canvas>
</Window>
